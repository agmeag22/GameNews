<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_margin="2dp"
    tools:context=".Fragments.SpecificNew">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="600dp">

        <ImageView
            android:id="@+id/specific_new_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@android:color/transparent" />

        <TextView
            android:id="@+id/specific_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/specific_new_image"
            android:background="@color/cardtextbackground"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            android:padding="16dp"
            android:layout_alignParentLeft="true"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/specific_title"
            android:padding="20dp"
            android:textAlignment="gravity"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            android:layout_alignParentLeft="true"
            android:background="@color/colorPrimary" />
    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>